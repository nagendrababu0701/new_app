<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "PocFly" %></title>
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <style>
   .bg_image{
     background-image:url(<%= asset_path 'anz_bg.jpg' %>);
     background-size: cover;
     min-height:600px;
   }
  </style>
  <body>
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <main role="main" class="bg_image" style="background-color: #fff !important;">
      
       <%= render 'layouts/messages' %>
       <%= yield %>
    </main>
  </body>  
</html>
