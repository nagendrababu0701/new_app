
<div id="signupbox" style="margin-top:280px;width:40%;margin-left: 48%" class="col-sm-offset-5">
  <div class="panel panel-info">
    <div class="panel-heading">
        <div class="panel-title">Sign Up</div>
        <div style="float:right; font-size: 113%; position: relative; top:-20px"><%= link_to "Login", new_user_session_path,style: "color: #fff"%></div>
    </div>  
    <div class="panel-body" >
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),class: "form-horizontal") do |f| %>
        <%if resource.errors.present? %>
        <div id="signupalert" class="alert alert-danger">
          <p>Error:</p>
          <span><%= devise_error_messages! %></span>
        </div>
        <%end%>

        <div class="form-group">
          <label for="firstname" class="col-md-3 control-label">Lanid</label>
          <div class="col-md-9">
            <%= f.text_field :lanid, class: "form-control", title: "Use global Lanid", placeholder: "Enter LanID" %>
      <span class="error_lanid"></span>              
          </div>
        </div>
        
        <div class="form-group">
            <label for="email" class="col-md-3 control-label">Email</label>
            <div class="col-md-9">
              <%= f.email_field :email, class: "form-control", placeholder: "Email Address" %>
        <span class="error_email"></span> 
            </div>
        </div>
                                    
        <div class="form-group">
          <label for="firstname" class="col-md-3 control-label">First Name</label>
          <div class="col-md-9">
      <%= f.text_field :first_name, class: "form-control", placeholder: "Enter Firstname" %>
      <span class="error_first_name"></span>            
          </div>
        </div>
        <div class="form-group">
          <label for="lastname" class="col-md-3 control-label">Last Name</label>
          <div class="col-md-9">
            <%= f.text_field :last_name, class: "form-control", placeholder: "Enter Lastname" %>
      <span class="error_last_name"></span>            
          </div>
        </div>
    
        <div class="form-group">
          <label for="password" class="col-md-3 control-label">Password</label>
          <div class="col-md-9">
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
      <span class="error_pass"></span>
          </div>
        </div>
        <div class="form-group">
          <label for="password" class="col-md-3 control-label">Password Confirmation</label>
          <div class="col-md-9">
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation" %>
      <span class="error_confirm_pass"></span>
          </div>
        </div>
        <div class="form-group">
            <!-- Button -->                                        
            <div class="col-md-offset-3 col-md-9" style="margin-top: 8px;">
                <%=f.submit 'Sign Up', class: "btn btn-info"%>
        <span class="error_submit"></span>
            </div>
        </div>
                                
      <%end%>
    </div>
  </div>
</div>
<style>
  input.form-control{margin-top: 8px;}
</style>

